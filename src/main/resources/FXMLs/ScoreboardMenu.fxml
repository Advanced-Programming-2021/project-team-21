<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<AnchorPane maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="400.0"
            prefWidth="600.0"
            fx:controller="view.ScoreBoard"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml">
    <ScrollPane hbarPolicy="NEVER" styleClass="scroll-bar" fitToWidth="true">
        <VBox alignment="TOP_CENTER" spacing="10" prefHeight="400"
              prefWidth="600" styleClass="scoreboard" id="mainVBox">
            <HBox spacing="100">
                <Button text="Back" onMouseClicked="#handleBackToMenu" styleClass="buttonEntrance"/>
                <Label text="  Scoreboard  " styleClass="title-label">
                    <font>
                        <Font size="40.0" />
                    </font>
                </Label>
            </HBox>

        </VBox>

    </ScrollPane>
    <stylesheets>
        <URL value="@../CSS/CSS.css"/>
    </stylesheets>

</AnchorPane>
