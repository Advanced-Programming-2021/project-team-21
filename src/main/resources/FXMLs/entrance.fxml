<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            maxHeight="-Infinity"
            styleClass="backgroundEntrance"
            fx:controller="view.LoginMenu"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0">
    <top>
        <Label text="Entrance menu" BorderPane.alignment="CENTER" styleClass="title-label">
            <font>
                <Font size="40.0" />
            </font>
        </Label>
    </top>
    <center>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Button alignment="CENTER" styleClass="buttonEntrance" contentDisplay="CENTER" maxHeight="50.0" maxWidth="200.0" onMouseClicked="#goToLogin" mnemonicParsing="false" text="Login">
                    <font>
                        <Font size="20.0" />
                    </font></Button>
                <Button maxHeight="50.0" styleClass="buttonEntrance" maxWidth="200.0" mnemonicParsing="false" onMouseClicked="#goToSignup" text="Sign up">
                    <font>
                        <Font size="20.0" />
                    </font></Button>
                <Button maxHeight="50.0" styleClass="buttonEntrance" maxWidth="200.0" mnemonicParsing="false" onMouseClicked="#exitProgram" text="Exit">
                    <font>
                        <Font size="20.0" />
                    </font></Button>
            </children>
        </VBox>
    </center>
    <stylesheets>
        <URL value="@../CSS/CSS.css"/>
    </stylesheets>
</BorderPane>
